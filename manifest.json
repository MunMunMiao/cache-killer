{
  "manifest_version": 3,
  "name": "Cache Killer Switch",
  "version": "0.1.0",
  "description": "Disable cache globally by clearing browsing data cache.",
  "permissions": [
    "browsingData",
    "declarativeNetRequest",
    "webNavigation",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon-on-16.png",
      "32": "assets/icon-on-32.png",
      "48": "assets/icon-on-48.png",
      "128": "assets/icon-on-128.png"
    }
  },
  "icons": {
    "16": "assets/icon-on-16.png",
    "32": "assets/icon-on-32.png",
    "48": "assets/icon-on-48.png",
    "128": "assets/icon-on-128.png"
  }
}
